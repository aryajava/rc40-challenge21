<% if (success && success.length > 0) { %>
<div id="success-alert" class="alert text-center alert-success fs-6 mt-3" role="alert"><%= success %></div>
<% } %> <% if (error && error.length > 0) { %>
<div id="error-alert" class="alert text-center alert-danger fs-6 mt-3" role="alert"><%= error %></div>
<% } %>

<script>
  const hideAlert = (id) => {
    setTimeout(() => {
      const alertElement = document.getElementById(id);
      if (alertElement) {
        alertElement.style.display = "none";
      }
    }, 3000);
  };
  if (document.getElementById("success-alert")) {
    hideAlert("success-alert");
  }
  if (document.getElementById("error-alert")) {
    hideAlert("error-alert");
  }
</script>


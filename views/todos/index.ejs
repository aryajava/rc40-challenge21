<%- include('../layout') %>
<div class="">
  <div class="card">
    <div class="card-header">
      <h2><%= user.email %></h2>
      <a href="/signout">Sign Out</a>
    </div>
    <div class="card-header">
      <h4 class="card-title">Title</h4>
    </div>
    <div class="card-body">
      <form action="" method="get">
        <div class="row">
          <div class="col">
            <label for="title">Title</label>
          </div>
          <div class="col">
            <input type="text" class="form-control" name="title" id="title" placeholder="Insert your title" required />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="startdate">Deadline</label>
          </div>
          <div class="col">
            <input type="date" class="form-control" name="startdate" id="startdate" required />
          </div>
          <div class="col">
            <label for="lastdate">s.d.</label>
          </div>
          <div class="col">
            <input type="date" class="form-control" name="lastdate" id="lastdate" required />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="complete">Complete</label>
          </div>
          <div class="col">
            <select class="form-select form-select-lg" name="complete" id="complete">
              <option selected disabled>Select Complete</option>
              <option value="false">Not Yet</option>
              <option value="true">Done</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label>Operation</label>
          </div>
          <div class="col">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="or" id="or" value="OR" checked />
              <label class="form-check-label" for="or">OR</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="and" id="and" value="AND" />
              <label class="form-check-label" for="and">And</label>
            </div>
          </div>
        </div>
        <div class="row">
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-warning">Reset</button>
        </div>
      </form>
      <hr />
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">No.</th>
              <th scope="col">Title</th>
              <th scope="col">Complete</th>
              <th scope="col">Deadline</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% todos.forEach((todo, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= todo.title %></td>
              <td><%= todo.complete ? "Done" : "Not Yet" %></td>
              <td><%= todo.deadline %></td>
              <td>
                <a href="/todos/edit/<%= todo.id %>">Edit</a>
                <a href="/todos/delete/<%= todo.id %>">Delete</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer text-muted">
      <div class="row">
        <a href="todos/add">Add</a>
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item active" aria-current="page">
              <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item">
              <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<%- include('../layout') %>
<div class="row">
  <div class="col-10 mt-3 mx-auto">
    <div class="card">
      <div class="card-header d-flex flex-row justify-content-between">
        <div class="d-flex flex-row align-items-center">
          <img src="https://via.placeholder.com/50" class="img-fluid rounded-circle" alt="User Profil Picture" />
          <h2 class="mb-0 mx-3"><%= user.email %></h2>
        </div>
        <a class="btn btn-secondary h-100" href="/signout" role="button"><i class="fa-solid fa-arrow-right-from-bracket"></i> Sign Out</a>
      </div>
      <div class="card-header">
        <h4 class="card-title">Title</h4>
      </div>
      <div class="card-body">
        <form action="" method="get">
          <div class="row">
            <div class="col">
              <label for="title">Title</label>
            </div>
            <div class="col">
              <input type="text" class="form-control" name="title" id="title" placeholder="Insert your title" required />
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="startdate">Deadline</label>
            </div>
            <div class="col">
              <input type="date" class="form-control" name="startdate" id="startdate" required />
            </div>
            <div class="col">
              <label for="lastdate">s.d.</label>
            </div>
            <div class="col">
              <input type="date" class="form-control" name="lastdate" id="lastdate" required />
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="complete">Complete</label>
            </div>
            <div class="col">
              <select class="form-select" name="complete" id="complete">
                <option selected disabled>Select Complete</option>
                <option value="false">Not Yet</option>
                <option value="true">Done</option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="or">Operation</label>
            </div>
            <div class="col">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="operation" id="or" value="OR" checked />
                <label class="form-check-label" for="or">OR</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="operation" id="and" value="AND" />
                <label class="form-check-label" for="and">AND</label>
              </div>
            </div>
          </div>
          <div class="row">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
            <button type="reset" class="btn btn-warning"><i class="fa-solid fa-rotate"></i></button>
          </div>
        </form>
        <hr />
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">Complete</th>
                <th scope="col">Deadline</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% todos.forEach((todo, index) => { %> <% const now=new Date(); const date=new Date(todo.deadline); const day=date.getDate(); const month=date.toLocaleString('default', { month: 'short'
              }); const year=date.getFullYear(); const hours=String(date.getHours()).padStart(2, '0' ); const minutes=String(date.getMinutes()).padStart(2, '0' ); const formattedDate=`${day} ${month}
              ${year} ${hours}:${minutes}`; const passedDeadline = date < now && !todo.complete; %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= todo.title %></td>
                <td><%= todo.complete ? "Done" : "Not Yet" %></td>
                <td><%= formattedDate %></td>
                <td>
                  <a class="btn btn-success" href="/todos/edit/<%= todo.id %>" role="button"><i class="fa-solid fa-pen"></i></a>
                  <a name="" id="" class="btn btn-danger" href="/todos/delete/<%= todo.id %>" role="button"><i class="fa-solid fa-trash"></i></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex flex-row justify-content-between">
          <a class="btn btn-primary align-items-center" href="todos/add" role="button"><i class="fa-regular fa-plus"></i></a>
          <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
              <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">1</a>
              </li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item">
                <a class="page-link" href="#">3</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

